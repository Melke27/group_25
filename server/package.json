{
  "name": "ethioheritage360-server",
  "version": "1.0.0",
  "description": "Backend server for EthioHeritage360",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore client/",
    "dev:debug": "nodemon --inspect server.js",
    "build": "npm install && echo 'Backend build completed - dependencies installed'",
    "build:render": "echo 'Render build completed - dependencies installed'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint . --ext .js,.jsx --ignore-path .eslintignore",
    "lint:fix": "eslint . --ext .js,.jsx --fix --ignore-path .eslintignore",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "seed": "node scripts/seed.js",
    "seed:dev": "NODE_ENV=development node scripts/seed.js",
    "seed:prod": "NODE_ENV=production node scripts/seed.js",
    "setup-super-admin": "node scripts/seedSystemSettings.js",
    "setup-production": "node scripts/setupProduction.js",
    "clean-db": "node scripts/cleanDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "db:rollback": "node scripts/rollback.js",
    "health:check": "node scripts/health-check.js",
    "logs:clear": "rm -f logs/*.log",
    "logs:tail": "tail -f logs/server.log",
    "security:audit": "npm audit && node scripts/security-audit.js",
    "validate:env": "node scripts/validate-environment.js",
    "test:mongodb": "node scripts/test-mongodb.js",
    "postinstall": "node scripts/setup-directories.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "serverless-http": "^3.2.0",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "heritage",
    "museum",
    "ethiopia",
    "virtual-tour"
  ],
  "author": "EthioHeritage360 Team",
  "license": "MIT"
}
