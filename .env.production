# =================================
# ETHIOHERITAGE360 - PRODUCTION ENV
# =================================

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=8888

# MongoDB Configuration (MongoDB Atlas)
# Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ethioheritage360?retryWrites=true&w=majority
DB_NAME=ethioheritage360

# JWT Configuration
# Generate secure random keys in production
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-key-here
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=30d

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# File Upload Configuration (Cloudinary or similar)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
MAX_FILE_SIZE=10485760

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
FROM_EMAIL=noreply@ethioheritage360.com
FROM_NAME=EthioHeritage360

# External API Keys
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
ALLOWED_ORIGINS=https://your-netlify-domain.netlify.app,https://ethioheritage360.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# Cache Configuration
CACHE_TTL=3600

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=https://your-netlify-domain.netlify.app

# Payment Integration (if needed)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Social Auth (if implemented)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Monitoring
HEALTH_CHECK_ENABLED=true
MONITORING_ENABLED=true
